{
  "openapi": "3.0.0",
  "info": {
    "title": "Civic Issue Monitoring System API",
    "version": "1.0.0",
    "description": "AI-powered civic issue detection and management system for VMC",
    "contact": {
      "name": "VMC Technical Team",
      "email": "tech@vmc.gov.in"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://api.vmc.gov.in",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints"
    },
    {
      "name": "Issues",
      "description": "Issue management endpoints"
    },
    {
      "name": "Wards",
      "description": "Ward and geo-fencing endpoints"
    },
    {
      "name": "Dashboard",
      "description": "Dashboard and analytics endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints (admin only)"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["surveyor", "engineer", "admin"]
          },
          "wardId": {
            "type": "integer",
            "nullable": true
          }
        }
      },
      "Issue": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "type": {
            "type": "string",
            "enum": ["pothole", "garbage", "debris", "stray_cattle", "broken_road", "open_manhole"]
          },
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          },
          "wardId": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "assigned", "resolved"]
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "confidenceScore": {
            "type": "number"
          },
          "imageUrl": {
            "type": "string"
          },
          "resolutionImageUrl": {
            "type": "string",
            "nullable": true
          },
          "engineerId": {
            "type": "integer",
            "nullable": true
          },
          "department": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "resolvedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Authenticate user and receive JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/issues": {
      "post": {
        "tags": ["Issues"],
        "summary": "Submit new issue",
        "description": "Submit a new civic issue with image and GPS coordinates",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["image", "latitude", "longitude"],
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "latitude": {
                    "type": "number"
                  },
                  "longitude": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Issue created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "issueId": {
                      "type": "integer"
                    },
                    "wardId": {
                      "type": "integer"
                    },
                    "issueType": {
                      "type": "string"
                    },
                    "priority": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "tags": ["Issues"],
        "summary": "List issues",
        "description": "Get list of issues with optional filters",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string",
              "enum": ["pending", "assigned", "resolved"]
            }
          },
          {
            "in": "query",
            "name": "priority",
            "schema": {
              "type": "string",
              "enum": ["high", "medium", "low"]
            }
          },
          {
            "in": "query",
            "name": "wardId",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of issues",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "issues": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Issue"
                      }
                    },
                    "count": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/issues/{id}": {
      "get": {
        "tags": ["Issues"],
        "summary": "Get issue details",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Issue details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Issue"
                }
              }
            }
          },
          "404": {
            "description": "Issue not found"
          }
        }
      }
    },
    "/api/issues/{id}/resolve": {
      "post": {
        "tags": ["Issues"],
        "summary": "Resolve issue",
        "description": "Upload resolution image and mark issue as resolved",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["resolution_image"],
                "properties": {
                  "resolution_image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Issue resolved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Issue not found"
          }
        }
      }
    },
    "/api/wards": {
      "get": {
        "tags": ["Wards"],
        "summary": "List all wards",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of wards"
          }
        }
      }
    },
    "/api/wards/{lat}/{lng}": {
      "get": {
        "tags": ["Wards"],
        "summary": "Get ward by coordinates",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "lat",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "path",
            "name": "lng",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ward details"
          },
          "404": {
            "description": "No ward found for coordinates"
          }
        }
      }
    },
    "/api/dashboard/engineer/{engineerId}": {
      "get": {
        "tags": ["Dashboard"],
        "summary": "Engineer dashboard",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "engineerId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Engineer dashboard data"
          }
        }
      }
    },
    "/api/dashboard/admin/stats": {
      "get": {
        "tags": ["Dashboard"],
        "summary": "Admin statistics",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "System-wide statistics"
          }
        }
      }
    },
    "/api/dashboard/admin/heatmap": {
      "get": {
        "tags": ["Dashboard"],
        "summary": "Issue heatmap data",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Heatmap data points"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": ["Users"],
        "summary": "List users",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of users"
          },
          "403": {
            "description": "Access denied (admin only)"
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "role"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["surveyor", "engineer", "admin"]
                  },
                  "wardId": {
                    "type": "integer",
                    "nullable": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "403": {
            "description": "Access denied (admin only)"
          }
        }
      }
    }
  }
}
